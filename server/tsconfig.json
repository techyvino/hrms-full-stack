{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
    },
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "pretty": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
