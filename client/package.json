{
  "name": "arvi-hrms-client",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack -p 5000 -H  0.0.0.0",
    "dev:https": "next dev --turbopack -p 5000 -H  0.0.0.0 --experimental-https",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "android": "next build && npx cap sync && npx cap open android",
    "format": "next lint && prettier 'src/**/*.{js,ts,tsx,json,yaml}' --write --ignore-path .gitignore",
    "format:fix": "next lint --fix && prettier  'src/**/*.{js,ts,tsx,json,yaml}' --write --ignore-path .gitignore"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "node_modules, out, server, android, .next"
    ]
  },
  "dependencies": {
    "@capacitor-community/background-geolocation": "^1.2.19",
